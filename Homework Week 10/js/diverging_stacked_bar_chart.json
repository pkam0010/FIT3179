{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Gender Gap in Global Unemployment Rates of Top 10 GDP countries(2015â€“2024)",
  "data": { "url": "https://pkam0010.github.io/FIT3179/Homework%20Week%2010/data/global_unemployment_gender_cleaned.csv"},
  "transform": [
    {"filter": "datum.Year == selectedYear"},
    {"calculate": "datum.Male_unemployment_rate * -1", "as": "Male_unemployment_negative"}
  ],
  "params": [
    {
      "name": "selectedYear",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "facet": {
    "field": "Country",
    "type": "nominal",
    "title": "Gender Gap in Unemployment (Top 10 GDP Countries)"
  },
  "spec": {
    "layer": [
      {
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "Male_unemployment_negative",
            "type": "quantitative",
            "title": "Unemployment Rate (%)",
            "axis": {"format": ".1f"}
          },
          "color": {"value": "#1f77b4"},
          "tooltip": [
            {"field": "Country"},
            {"field": "Year"},
            {"field": "Male_unemployment_rate", "title": "Male Unemployment Rate(%)"}
          ]
        }
      },
      {
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "Female_unemployment_rate",
            "type": "quantitative",
            "axis": {"format": ".1f"}
          },
          "color": {"value": "#ff7f0e"},
          "tooltip": [
            {"field": "Country"},
            {"field": "Year"},
            {"field": "Female_unemployment_rate", "title": "Female Unemployment Rate(%)"}
          ]
        }
      }
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"grid": false, "labelFontSize": 10, "titleFontSize": 12},
    "facet": {"spacing": 10}
  }
}