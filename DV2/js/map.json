{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "autosize": {"type": "fit", "contains": "padding"},
  "config": {"view": {"stroke": "transparent"}},
  "projection": {
    "type": "equalEarth"
  },

  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#aadaff"}
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "lightgray", "fill": "none"}
    },
    {
      "data": {
        "url": "https://pkam0010.github.io/FIT3179/DV2/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://pkam0010.github.io/FIT3179/DV2/data/global_unemployment_rate_cleaned.csv"
            },
            "key": "country_code",
            "fields": ["Year", "unemployment_rate"]
          }
        },
        {"filter": "datum.Year == 2024"}
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5, "strokeOpacity": 0.5},
      "encoding": {
        "color": {
          "field": "unemployment_rate",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Unemployment Rate (%)"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "ordinal"},
          {
            "field": "unemployment_rate",
            "type": "quantitative",
            "title": "Unemployment Rate (%)",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
