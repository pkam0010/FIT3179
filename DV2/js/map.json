{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "autosize": {"type": "fit", "contains": "padding"},
  "config": {
    "view": {"stroke": "transparent"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#aadaff", "stroke": null}
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "lightgray", "fill": "none"}
    },
    {
      "data": {
        "url": "https://pkam0010.github.io/FIT3179/DV2/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://pkam0010.github.io/FIT3179/DV2/data/global_unemployment_rate_cleaned.csv"
            },
            "key": "country_code",
            "fields": ["country", "Year", "unemployment_rate"]
          }
        },
        {
          "filter": "datum.Year == selectedYear"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "condition": {
            "test": "datum['unemployment_rate'] != null",
            "field": "unemployment_rate",
            "type": "quantitative",
            "scale": {"scheme": "reds"},
            "title": "Unemployment Rate (%)"
          },
          "value": "lightgray"
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "unemployment_rate", "type": "quantitative", "format": ".2f", "title": "Unemployment Rate (%)"},
          {"field": "Year", "type": "ordinal", "title": "Year"}
        ]
      }
    }
  ],
  "params": [
    {
      "name": "selectedYear",
      "value": 2014,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2024,
        "step": 1,
        "name": "Select Year:"
      }
    }
  ]
}