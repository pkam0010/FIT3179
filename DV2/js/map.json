{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Unemployment Rates (2024)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#aadaff", "stroke": null}
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "lightgray", "fill": "none"}
    },
    {
      "data": {
        "url": "https://pkam0010.github.io/FIT3179/Homework%20Week%209/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://pkam0010.github.io/FIT3179/Homework%20Week%209/data/global_unemployment_cleaned.csv"
            },
            "key": "Country Code",
            "fields": ["Year", "Unemployment Rate"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "condition": {
            "test": "datum['Unemployment Rate'] != null",
            "field": "Unemployment Rate",
            "type": "quantitative",
            "scale": {"scheme": "reds"}
          },
          "value": "white"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Unemployment Rate",
            "type": "quantitative",
            "title": "Unemployment Rate (%)",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}
