{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": "container",
  "height": 400,
  "autosize": {"type": "fit", "contains": "padding"},
  "data": {
    "url": "https://pkam0010.github.io/FIT3179/DV2/data/global_unemployment_age_group.csv"
  },
  "transform": [
    {
      "fold": ["2015","2016","2017","2018","2019","2020","2021","2022","2023","2024"],
      "as": ["Year", "Unemployment Rate"]
    },
    {
      "filter": "datum.country_name == countrySelection"
    },
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "Unemployment Rate",
          "as": "Avg Unemployment Rate"
        }
      ],
      "groupby": ["country_name", "Year", "age_group"]
    }
  ],
  "params": [
    {
      "name": "countrySelection",
      "value": "Brazil",
      "bind": {
        "input": "select",
        "options": [
          "Brazil",
          "Canada",
          "China",
          "France",
          "Germany",
          "India",
          "Italy",
          "Japan",
          "United Kingdom",
          "United States"
        ],
        "labels": [
          "Brazil",
          "Canada",
          "China",
          "France",
          "Germany",
          "India",
          "Italy",
          "Japan",
          "United Kingdom",
          "United States"
        ],
        "name": "Select Country: "
      }
    }
  ],
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "Avg Unemployment Rate",
      "type": "quantitative",
      "title": "Unemployment Rate (%)"
    },
    "color": {
      "field": "age_group",
      "type": "nominal",
      "title": "Age Group"
    },
    "tooltip": [
      {"field": "country_name", "title": "Country"},
      {"field": "Year"},
      {"field": "age_group", "title": "Age Group"},
      {
        "field": "Avg Unemployment Rate",
        "title": "Unemployment Rate (%)",
        "format": ".2f"
      }
    ]
  }
}
