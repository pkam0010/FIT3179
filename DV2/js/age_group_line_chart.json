{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://pkam0010.github.io/FIT3179/DV2/data/unemployment_rate_by_gender_age_cleaned.csv"
  },
  "transform": [
    {"filter": "isValid(datum.Rate)"},
    {
      "aggregate": [
        {"op": "mean", "field": "Rate", "as": "AvgRate"}
      ],
      "groupby": ["country_name", "age_group", "Year"]
    },
    {"filter": "datum.country_name == countrySelection"}
  ],
  "params": [
    {
      "name": "countrySelection",
      "value": "Australia",
      "bind": {
        "input": "select",
        "options": [
          "Australia",
          "China",
          "United Kingdom",
          "United States",
          "South Africa",
          "Canada",
          "Brazil",
          "Japan",
          "Germany",
          "France"
        ],
        "name": "Select Country: "
      }
    }
  ],
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"title": "Year"}
    },
    "y": {
      "field": "AvgRate",
      "type": "quantitative",
      "axis": {"title": "Average Unemployment Rate (%)"}
    },
    "color": {
      "field": "age_group",
      "type": "nominal",
      "title": "Age Group",
      "scale": {"scheme": "set2"}
    },
    "tooltip": [
      {"field": "country_name", "title": "Country"},
      {"field": "age_group", "title": "Age Group"},
      {"field": "Year", "title": "Year"},
      {"field": "AvgRate", "title": "Average Unemployment Rate (%)", "format": ".2f"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}
