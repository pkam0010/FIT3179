{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "autosize": {"type": "fit", "contains": "padding"},
  "data": {
    "url": "https://pkam0010.github.io/FIT3179/DV2/data/unemployment_rate_by_gender_age_cleaned.csv"
  },
  "transform": [
    {
      "filter": "datum.age_group == '15-24' || datum.age_group == '25+' || datum.age_group == 'Under 15'"
    },
    {
      "filter": "isValid(datum.Rate)"
    },
    {
      "calculate": "datum.sex == 'Male' ? -datum.Rate : datum.Rate",
      "as": "DivergingRate"
    },
    {
      "filter": "datum.Year == yearSelection"
    }
  ],
  "params": [
    {
      "name": "yearSelection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "mark": {"type": "bar"},
  "encoding": {
    "y": {
      "field": "country_name",
      "type": "ordinal",
      "axis": {"title": "Country"},
      "sort": "-x"
    },
    "x": {
      "field": "DivergingRate",
      "type": "quantitative",
      "axis": {"title": "Unemployment Rate (%)"}
    },
    "color": {
      "field": "sex",
      "type": "nominal",
      "scale": {"domain": ["Male", "Female"], "range": ["#4C78A8", "#E45756"]},
      "legend": {"orient": "top"}
    },
    "tooltip": [
      {"field": "country_name", "title": "Country"},
      {"field": "sex", "title": "Gender"},
      {"field": "Rate", "title": "Unemployment Rate (%)"},
      {"field": "Year", "title": "Year"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}