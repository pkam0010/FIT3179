{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "data": {"url": "https://pkam0010.github.io/FIT3179/DV2/data/global_unemployment_rate_gdp_population_combined.csv"},
  "params": [
    {
      "name": "RegionFilter",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Asia",
          "Europe",
          "North America",
          "South America",
          "Africa",
          "Other"
        ],
        "labels": [
          "All Regions",
          "Asia",
          "Europe",
          "North America",
          "South America",
          "Africa",
          "Other"
        ],
        "name": "Region: "
      },
      "value": "All"
    },
    {
      "name": "YearSelection",
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      },
      "value": 2024
    }
  ],
  "transform": [
    {
      "filter": "RegionFilter == 'All' || datum.region == RegionFilter"
    },
    {
      "filter": "datum.Year == YearSelection"
    },
    {
      "calculate": "datum.GDP / 1e12",
      "as": "GDP_trillion"
    }
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.7,
    "stroke": "black",
    "strokeWidth": 0.5
  },
  "encoding": {
    "x": {
      "field": "GDP_trillion",
      "type": "quantitative",
      "title": "GDP (Trillion USD)",
      "scale": {"type": "linear"}
    },
    "y": {
      "field": "unemployment_rate",
      "type": "quantitative",
      "title": "Unemployment Rate (%)"
    },
    "size": {
      "field": "Population",
      "type": "quantitative",
      "title": "Population",
      "scale": {"range": [50, 2000]}
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "title": "Region",
      "legend": {"orient": "right"}
    },
    "tooltip": [
      {"field": "country", "title": "Country"},
      {"field": "GDP_trillion", "title": "GDP per Capita (Trillion USD)", "format": ".2f"},
      {"field": "unemployment_rate", "title": "Unemployment Rate (%)", "format": ".1f"},
      {"field": "Population", "title": "Population"},
      {"field": "region", "title": "Region"},
      {"field": "Year", "title": "Year"}
    ]
  },
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 13},
    "legend": {"labelFontSize": 12, "titleFontSize": 13}
  }
}